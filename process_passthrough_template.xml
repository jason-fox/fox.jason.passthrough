<project  name="fox.jason.passthrough" xmlns:dita="http://dita-ot.sourceforge.net">


	<target name="passthrough.init"
		dita:depends="{fox.jason.passthrough.pre}"
     	dita:extension="depends org.dita.dost.platform.InsertDependsAction">
		<typedef file="${dita.plugin.fox.jason.passthrough.dir}/resource/antlib.xml"/>

		<fileset id="passthrough.ditamaps" dir="${dita.temp.dir}">
			<include name="**/*.ditamap"/>
		</fileset>
	</target>

	<target name="passthrough.process"
		dita:depends="{fox.jason.passthrough.process}"
     	dita:extension="depends org.dita.dost.platform.InsertDependsAction"/>

    <target name="passthrough-copy">
    	<macrodef name="copy-file">
			<attribute name="src" />
			<attribute name="dest" />
			<sequential>
    			<echo taskname="passthrough" level="info" message="Processing @{src}"/>
				<copy taskname="passthrough" file="@{src}" tofile="@{dest}" overwrite="true"/>
			</sequential>
		</macrodef>
		<passthrough-iterate format="passthrough" macro="copy-file"/>
    </target>

	<target name="passthrough" depends="passthrough.init,passthrough.process"/>
</project>